<li>
  <% if page.children.any? %>
    <%= link_to slug_path(page), :class => "dropdown-toggle #{menu_item_state(page)}",
                          :'data-toggle' => '' do %>
      <%= raw(page.name) %>
      <b class='caret'></b>
    <% end %>

    <ul class="dropdown-menu">
      <% page.children.each do |child| %>
        <li>
          <%= link_to raw(child.name), slug_path(child), :class => menu_item_state(child) %>
        </li>
      <% end %>
    </ul>
    <b class="caret-out"></b>
  <% else %>
    <%= link_to raw(page.name), (page.slug == 'index') ? '/' : slug_path(page), :class => menu_item_state(page) %>
  <% end %>
</li>
