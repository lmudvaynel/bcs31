<%= form_for @online_courier, :url => online_couriers_path(@online_courier), validate: true do |f| %>
  <div class="" id="request">
    <div class="request-control courier_from">
      <h3>Вызов курьера по Белгороду</h3>
      <span class="courier_asterisk" style="font-size: 32px; color: #FF0000">&#42;</span>
      <span class="courier_attention">Внимание, временной интервал на вызов курьера должен быть не менее 3х часов.
        Вызовы
        на текущий день
        принимаются до 15.00 по г.Белгород, до 12.00 по Белгородскому району</span>
      <div class="courier_field_container">
        <%= f.label "Тип перевозки", class: 'field_name courier' %>
        <%= f.select :transportation, OnlineCourier.transportation.options, {}, class: "select_field courier wide" %>
      </div>
      <div class="courier_field_container">
          <%= f.label :date, class: 'field_name courier' %>
        <div class="pickup_delivery_date">
          <%= f.date_select :date, as: :date_select,
                            start_year: Time.now.year, end_year: Time.now.year + 5 %>
        </div>
      </div>
      <div class="courier_field_container">
        <span class="field_name time_span courier">Временной интервал забора груза</span>
        <%= f.text_field :time_end, placeholder: "До:", class: 'text_field courier time_end' %>
        <%= f.text_field :time_start, placeholder: "От:", class: 'text_field courier time_start' %>

      </div>
      <div class="clear_courier_one"></div>
      <p class="field_name courier bold_courier">Информация об отправителе</p>
        <%= online_courier_text_field :full_name, f %>
        <%= online_courier_text_field :phone, f %>
        <%= online_courier_text_field :company, f %>
        <%= online_courier_text_field :address, f %>
      <p class="field_name courier bold_courier">Информация о грузе и характере оплаты</p>
        <%= online_courier_text_field :weight, f %>
        <%= online_courier_text_field :amount, f %>
        <%= online_courier_text_field :size, f %>
        <%= online_courier_text_field :cargo_type, f %>
        <%= online_courier_text_field :city, f %>
      <div class="courier_field_container">
        <%= f.label 'Тип оплаты', class: 'request_lable field_name courier' %>
        <%= f.select :payment, OnlineCourier.payment.options,{} , class: 'select_field courier wide' %>
      </div>
      <div class="courier_field_container">
        <%= f.label 'Кто платит', class: 'request_lable field_name courier' %>
        <%= f.select :payer, OnlineCourier.payer.options,{} , class: 'select_field courier wide' %>
      </div>
      <div>
        <%= online_courier_text_field :payer_number, f %>
        <div class="courier_field_container">
          <%= f.label "Комментарий", class: "field_name courier" %>
          <%= f.text_area :comment, class: "text_field courier courier_comment" %>
        </div>
      </div> 
    <div class="courier_field_container">
      <%= recaptcha_tags %>
      <%= errors_for(@online_courier, :base) %>
    </div>
      <div class="clear_courier"></div>
        <%= f.submit 'Отправить', class: 'feedback-btn submit_button orange'%>
    </div>
  </div>
<% end %>
